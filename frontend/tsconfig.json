{
    "compilerOptions": {
        "target": "esnext",
        "useDefineForClassFields": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react-jsx",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
